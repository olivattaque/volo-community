%li
  = link_to image_tag(video_post.video_information.thumbnail_large, :size => '305x176', :force => true, :class => 'thumbnail'), video_post
  %div.floatleft
    = link_to image_tag(video_post.user.gravatar_url(:size => 20), :title => video_post.user.username), video_post.user
